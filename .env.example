# Required to generate HTML
OPENAI_API_KEY=

# Required to READ saved HTML via the Edge Config SDK
# Set to the Edge Config read URL (includes token):
# EDGE_CONFIG=https://edge-config.vercel.com/<edge_config_id>/items?token=ecfg_tr_xxx
EDGE_CONFIG=

# Required to WRITE saved HTML using Vercel REST API (Node runtime only)
EDGE_CONFIG_ID=
VERCEL_API_TOKEN=

# Optional: Upstash Redis (or Vercel KV) for locking and queueing pregeneration
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=
# If you provision via Vercel KV integration, use these instead of the UPSTASH_* vars:
KV_REST_API_URL=
KV_REST_API_TOKEN=

# Optional: Vercel Blob for storing generated images (recommended when include image is on)
BLOB_READ_WRITE_TOKEN=

# Optional: Admin protection for /admin and config routes
ADMIN_TOKEN=

# Optional: Model controls
# Defaults are fine, override to change model behavior
OPENAI_MODEL=
OPENAI_FALLBACK_MODEL=
